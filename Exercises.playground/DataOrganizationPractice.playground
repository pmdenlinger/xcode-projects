print("\nğŸ’¡ SOLUTION 3.1: Library System")
struct Library {
    let name: String
    private var books: [Book]
    
    init(name: String, books: [Book] = []) {
        self.name = name
        self.books = books
    }
    
    mutating func addBook(_ book: Book) {
        books.append(book)
        print("ğŸ“š Added '\(book.title)' to \(name)")
    }
    
    func findBooks(by author: String) -> [Book] {
        return books.filter { $0.author.lowercased().contains(author.lowercased()) }
    }
    
    func bookCount: Int {
        return books.count
    }
    
    var availableBooks: [Book] {
        return books.filter { !$0.isRead }
    }
}

struct Member {
    let name: String
    private var borrowedBooks: [String] = []
    
    init(name: String) {
        self.name = name
    }
    
    mutating func borrowBook(_ title: String) {
        borrowedBooks.append(title)
        print("ğŸ“– \(name) borrowed '\(title)'")
    }
    
    mutating func returnBook(_ title: String) {
        if let index = borrowedBooks.firstIndex(of: title) {
            borrowedBooks.remove(at: index)
            print("ğŸ“— \(name) returned '\(title)'")
        }
    }
    
    var currentBooks: [String] {
        return borrowedBooks
    }
}

// Test the Library system
var library = Library(name: "City Library")
library.addBook(Book(title: "1984", author: "George Orwell", pages: 328, isRead: false))
library.addBook(Book(title: "Animal Farm", author: "George Orwell", pages: 112, isRead: false))

var member = Member(name: "Alice")
member.borrowBook("1984")
print("Alice's books: \(member.currentBooks)")

print("\nğŸ’¡ SOLUTION 4.1: Contact Manager")
struct Contact {
    let name: String
    let phone: String
    let email: String
    
    var description: String {
        return "\(name) - ğŸ“ \(phone) - ğŸ“§ \(email)"
    }
}

class ContactManager {
    private var contacts: [Contact] = []
    
    func addContact(_ contact: Contact) {
        contacts.append(contact)
        print("âœ… Added contact: \(contact.name)")
    }
    
    func findContact(by name: String) -> Contact? {
        return contacts.first { $0.name.lowercased().contains(name.lowercased()) }
    }
    
    func listAllContacts() {
        print("\nğŸ“‡ All Contacts:")
        if contacts.isEmpty {
            print("  No contacts found")
        } else {
            for contact in contacts.sorted(by: { $0.name < $1.name }) {
                print("  \(contact.description)")
            }
        }
    }
    
    var contactCount: Int {
        return contacts.count
    }
}

// Test the Contact Manager

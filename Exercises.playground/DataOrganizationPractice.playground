struct Book {
    let title: String
    let author: String
    let pages: Int
    var isRead: Bool
    
    // Computed property for description
    var description: String {
        return "\(title) by \(author) (\(pages) pages)" + (isRead ? " âœ“ Read" : " â—¯ Unread")
    }
    
    // Computed property for category
    var category: String {
        switch pages {
        case ..<200:
            return "Short"
        case 200...500:
            return "Medium"
        default:
            return "Long"
        }
    }
}


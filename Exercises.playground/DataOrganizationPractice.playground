manager.addContact(Contact(name: "Jane Smith", phone: "555-0456", email: "jane@example.com"))

manager.listAllContacts()

if let contact = manager.findContact(by: "john") {
    print("\nğŸ” Found: \(contact.description)")
}

print("\nğŸ“Š Total contacts: \(manager.contactCount)")

